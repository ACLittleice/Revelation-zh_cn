
//======// Output //==============================================================================//

/* RENDERTARGETS: 6 */
out vec4 albedoOut;

//======// Input //===============================================================================//

in vec4 vertColor;
in vec2 texCoord;

//======// Uniform //=============================================================================//

uniform sampler2D tex;

//======// Main //================================================================================//
void main() {
	albedoOut = texture(tex, texCoord) * vertColor;
}